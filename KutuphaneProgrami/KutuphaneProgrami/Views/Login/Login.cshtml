
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Kütüphane Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Css/stylee.css" rel="stylesheet" />
</head>
<body class="img js-fullheight" style="background-image: url(/Content/images/library.jpg); ">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Kütüphane Giriş Formu</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Giriş Yap</h3>
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="email" name="UserMail" class="form-control" placeholder="Mail" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="OriginalPass" type="password" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom:15px">
                                    <a class="text-gray-dark">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div>
                            }
                        }
                        <p class="w-100 text-center">&mdash; Ya Da Bunlarla Birlikte Giriş Yap &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>
</html>


