@using EntityLayer
@model List<Book>
@{
    ViewBag.Title = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ string status = "";}
@{ string statusButton = "";}

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Sıra No</th>
            <th>Kategori</th>
            <th>Kitap Adı</th>
            <th>Adet</th>
            <th>Yazar</th>
            <th>Güncelle</th>
            <th>Aktif Ya Da Pasif Yap</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == true)
            {
                status = "Pasif Yap";
                statusButton = "btn btn-danger";
            }
            if (item.Status == false)
            {
                status = "Aktif Yap";
                statusButton = "btn btn-success";
            }
            <tr>

                <td>@item.BookNo</td>
                <td>
                    @item.Categories.CategoryName
                </td>
                <td>@item.BookName</td>
                <td>@item.Total</td>
                <td>@item.Writer.WriterName @item.Writer.WriterSurname</td>
                <td><a href="/Book/BookUpdate/@item.Id" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Book/ActiveOrPassive/@item.Id" class="@statusButton">@status</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Sıra No</th>
            <th>Kategori</th>
            <th>Kitap Adı</th>
            <th>Adet</th>
            <th>Yazar</th>
            <th>Güncelle</th>
            <th>Aktif Ya Da Pasif Yap</th>
        </tr>
    </tfoot>
</table>
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }
</style>

