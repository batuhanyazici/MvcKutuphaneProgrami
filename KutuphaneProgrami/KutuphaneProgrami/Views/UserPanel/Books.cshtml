@using EntityLayer
@model List<Book>
@{
    ViewBag.Title = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Sıra No</th>
            <th>Kategori</th>
            <th>Kitap Adı</th>
            <th>Adet</th>
            <th>Yazar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status==true)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.BookNo</td>
                    <td>
                        @item.Categories.CategoryName
                    </td>
                    <td>@item.BookName</td>
                    <td>@item.Total</td>
                    <td>@item.Writer.WriterName @item.Writer.WriterSurname</td>
                </tr>
            }

        }

    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Sıra No</th>
            <th>Kategori</th>
            <th>Kitap Adı</th>
            <th>Adet</th>
            <th>Yazar</th>
        </tr>
    </tfoot>
</table>
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }
</style>

